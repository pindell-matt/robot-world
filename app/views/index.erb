<h1>All Robots</h1>

<div class="row">
  <% @robots.each do |robot| %>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <a href="/robots/<%= robot.id %>">
          <img src="https://robohash.org/<%= robot.avatar %>.png" alt="robot avatar" class="img-thumbnail">
        </a>
        <div class="caption">
          <h2><a href="/robots/<%= robot.id %>"><%= robot.name %></a></h2>
          <p>
            <span class="label label-info"><%= robot.city %>, <%= robot.state %></span>
            <span class="label label-info"><%= robot.department %></span>
          </p>
          <form role="button" action="/robots/<%= robot.id %>" method="post" class="form-inline">
            <div class="form-group">
              <a role="button" class="btn btn-primary" href="/robots/<%= robot.id %>/edit" value="Edit">Edit</a>
              <input type="hidden" name="_method" value="delete">
              <input style="display: inline;" role="button" class="btn btn-danger" type="submit" value="Delete">
            </div>
          </form>
        </div>
      </div>
    </div>
  <% end %>
</div>
