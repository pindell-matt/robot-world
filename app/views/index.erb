<% @robots.each do |robot| %>
  <div class="row">
    <div class="col-md-12">
      <h3><a href="/robots/<%= robot.id %>"><%= robot.name %></a></h3>
    </div>
    <div class="col-md-1">
      <a role="button" class="btn btn-primary" href="/robots/<%= robot.id %>/edit">Edit</a>
    </div>
    <div class="col-md-1">
      <form action="/robots/<%= robot.id %>" method="post">
        <input type="hidden" name="_method" value="delete">
        <input role="button" class="btn btn-danger" type="submit" value="Delete">
      </form>
    </div>
  </div>
<% end %>
