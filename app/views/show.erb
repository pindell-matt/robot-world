<div class="row">
  <div class="col-md-12">
    <h1><%= @robot.name %></h1>
  </div>
  <div class="robot-img">
    <img src="https://robohash.org/<%= @robot.avatar %>.png" alt="robot avatar" class="center-block">
  </div>
  <div class="robot-info">
    <h4>Born: <%= @robot.birth_date %></h4>
    <h4>Hired: <%= @robot.date_hired %></h4>
    <h4><%= @robot.department %> Department</h4>
    <h4><%= @robot.city %>, <%= @robot.state %></h4>
    <form role="button" action="/robots/<%= @robot.id %>" method="post" class="form-inline">
      <div class="form-group">
        <a role="button" class="btn btn-primary" href="/robots/<%= @robot.id %>/edit" value="Edit">Edit</a>
        <input type="hidden" name="_method" value="delete">
        <input style="display: inline;" role="button" class="btn btn-danger" type="submit" value="Delete">
      </div>
    </form>
  </div>
</div>
